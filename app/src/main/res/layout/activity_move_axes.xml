<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoveAxes">


    <!-- Text Fields-->

    <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/X"
            android:fontFamily="sans-serif-medium" android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_left"
            app:layout_constraintStart_toStartOf="@+id/btn_left"/>

    <TextView
            android:text="Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Y"
            android:fontFamily="sans-serif-medium" android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_upZ"
            app:layout_constraintStart_toStartOf="@+id/btn_upZ"/>

    <TextView
            android:text="Z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Z"
            app:layout_constraintBottom_toTopOf="@+id/btn_up" app:layout_constraintStart_toStartOf="@+id/btn_up"
            android:fontFamily="sans-serif-medium" android:textSize="18sp"/>

    <!-- X/Y axis buttons-->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_left"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:icon="@drawable/ic_arrow_left"
            app:iconGravity="textStart"
            android:gravity="center"
            app:iconSize="80dp"
            app:iconPadding="0dp"
            app:iconTint="@color/colorBlack"
            app:rippleColor="@color/colorBlack"
            android:textColor="@color/colorBlack"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_home"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            android:gravity="center"
            app:iconPadding="0dp"
            app:iconSize="60dp"
            app:iconTint="@color/colorBlack"
            app:rippleColor="@color/colorBlack"
            android:layout_width="80dp"
            android:layout_height="80dp"

            app:layout_constraintStart_toEndOf="@+id/btn_left"
            android:layout_marginStart="8dp"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent" android:insetTop="0dp"
            android:insetBottom="0dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_up"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:icon="@drawable/ic_arrow_up"
            app:iconGravity="textStart"
            android:gravity="center"
            app:iconPadding="0dp"
            app:iconSize="80dp"
            app:iconTint="@color/colorBlack"
            app:rippleColor="@color/colorBlack"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:insetTop="0dp" android:insetBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_homeZ"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_right"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="textStart"
            android:gravity="center"
            app:iconPadding="0dp"
            app:iconSize="80dp"
            app:iconTint="@color/colorBlack"
            app:rippleColor="@color/colorBlack"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:insetTop="0dp" android:insetBottom="0dp"
            app:layout_constraintStart_toEndOf="@+id/btn_home"
            android:layout_marginStart="8dp"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_down"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:icon="@drawable/ic_arrow_down"
            app:iconGravity="textStart"
            android:gravity="center"
            app:iconPadding="0dp"
            app:iconSize="80dp"
            app:iconTint="@color/colorBlack"
            app:rippleColor="@color/colorBlack"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:insetTop="0dp" android:insetBottom="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_home" app:layout_constraintStart_toEndOf="@+id/btn_left"
            android:layout_marginStart="8dp"/>


    <!-- Z axis buttons-->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_homeZ"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            android:gravity="center"
            app:iconPadding="0dp"
            app:iconSize="60dp"
            app:iconTint="@color/colorBlack"
            app:rippleColor="@color/colorBlack"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent" android:insetTop="0dp"
            android:insetBottom="0dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upZ"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:icon="@drawable/ic_arrow_up"
            app:iconGravity="textStart"
            android:gravity="center"
            app:iconPadding="0dp"
            app:iconSize="80dp"
            app:iconTint="@color/colorBlack"
            app:rippleColor="@color/colorBlack"
            android:layout_width="80dp"
            android:layout_height="80dp"

            app:layout_constraintStart_toEndOf="@+id/btn_left"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_home"
            android:layout_marginBottom="8dp" android:insetTop="0dp" android:insetBottom="0dp"
    />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_downZ"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:icon="@drawable/ic_arrow_down"
            app:iconGravity="textStart"
            android:gravity="center"
            app:iconPadding="0dp"
            app:iconSize="80dp"
            app:iconTint="@color/colorBlack"
            app:rippleColor="@color/colorBlack"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:insetTop="0dp" android:insetBottom="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_homeZ" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Material Button Toggle Group-->

    <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:checkedButton="@id/button2"


            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_down">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/button1"
                android:text="0.1mm"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"

                android:layout_height="50dp" android:layout_width="100dp"
        />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                android:text="1mm"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"

                android:layout_height="50dp" android:layout_width="100dp"
        />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                android:text="10mm"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"

                android:layout_height="50dp" android:layout_width="100dp"
        />


    </com.google.android.material.button.MaterialButtonToggleGroup>



</androidx.constraintlayout.widget.ConstraintLayout>